<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary3</item>
        <item name="colorControlActivated">@color/colorPrimary2</item>
        <item name="android:textColorPrimary">@color/colorPrimary2</item>
        <item name="actionBarItemBackground">@color/colorPrimaryDark2</item>
        <item name="colorControlNormal">@color/colorPrimary2</item>
        <item name="colorControlHighlight">@color/colorPrimary2</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="DatePickerTheme" parent="AlertDialogTheme">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:datePickerStyle">@style/AlertDialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary3</item>
    </style>

    <style name="Toolbar2Style" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RecyclerCourseNames">
